<h1>Menu</h1>
<h2>Starters:</h2>
{{#each startersArr}}


    <section>
        <h2>{{this.title}}</h2>
        <p>
            Price: € {{this.price}}<br />
            {{!-- Category: {{this.category}} <br /> --}}
            <a href="/menu/{{this._id}}">More details</a> |
            <a href="/menu/{{this._id}}/edit">Edit</a> |
            <form action="/menu/{{this._id}}/delete" method="POST">
                <button>Delete</button>
            </form>
        </p>

    </section>
{{/each}}

