<section class="text-white">
    <div class="container blur-bg">
        <h2>{{item.title}}</h2>


        <p>
            <strong>Price: </strong>€ {{item.price}} <br />
        </p>
        <p>
            <strong>Description:</strong>
            {{item.description}}
        </p>
        <p>
            <strong>Category:</strong>
            {{item.category}}
        </p>

        <p>
            <img class="card-img-details" src="{{item.image_url}}" alt="">

        </p>

        {{#if user.isAdmin}}
        <div class="container-fluid d-flex flex-start">
            <a href="/menu/{{item._id}}/edit" class="btn btn-outline-light mx-3 blur-bg">🔧 Edit</a>
            <form action="/menu/{{item._id}}/delete" method="POST" class="d-inline">
                <button class="btn btn-outline-danger mx-3 blur-bg">🗑️ Delete</button>
            </form>
        </div>
        {{/if}}
    </div>
</section>




<a href="/menu" class="btn btn-outline-light blur-bg">Back</a>