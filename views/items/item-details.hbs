<section class="text-white">
    <h2>{{item.title}}</h2>
    

    <p>
        <strong>Price: </strong> {{item.price}} <br />
    </p>
    <p>
        <strong>Description:</strong>
        {{item.description}}
    </p>
    <p>
        <strong>Category:</strong>
        {{item.category}}
    </p>
   
    <p>
        <img class="card-img-details" src="{{item.image_url}}" alt="">
        
    </p>

    {{#if user.isAdmin}}
    <p>
        <form action="/menu/{{item._id}}/delete" method="POST">
            <button type="button" class="btn btn-danger">Delete</button>
        </form>
    </p>
    {{/if}}

</section>



{{#if user.isAdmin}}
<a href="/menu/{{item._id}}/edit" class="link-light text-decoration-none">Edit Item</a> | 
{{/if}}
<a href="/menu" class="link-light text-decoration-none">Back</a>