<form action="/create" method="POST" enctype="multipart/form-data" class="text-white">
   <label> Title:
      <input type="text" name="title" required>
   </label> <br />
   <label> Price:
      <input type="number" name="price"  min="0" step="any" required>
   </label> <br />
   <label> Category:
      <select name="category" required>
        <option value="starter">Starter</option>
        <option value="main">Main</option>
        <option value="dessert">Dessert</option>
        <option value="beverages">Beverages</option>
      </select>
   </label> <br />
   <label> Description:
      <textarea name="description" cols="30" rows="4"> </textarea>
   </label> <br />
   <label> Image:
      <input type="file" name="image_url" accept="image/png, image/jpeg" required/>
   </label> <br />
   
   <button type="submit" class="btn btn-success">Submit</button>
</form>