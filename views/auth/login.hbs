<div class="container">

<h2>LogIn</h2>
<section>
<form action="/auth/login" class="needs-validation" id="login-form" method="POST" novalidate >
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com" required>
    <label for="floatingInput">Email address</label>
    <div class="invalid-feedback">
        Please choose a email address.
    </div>
  </div>
<div class="form-floating">
  <input type="password" class="form-control" id="floatingPassword" name="passwordHash" placeholder="Password" required>
  <label for="floatingPassword">Password</label>
</div>
   <div>
    <button class="btn btn-primary mt-3" type="submit">Login</button>
  </div>
</form>
</section>


<div class="text-white">
   {{#if errorMessage}}
      {{errorMessage}}
   {{/if}}
</div>

</div>















